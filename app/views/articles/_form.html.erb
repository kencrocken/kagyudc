<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The article was not saved because of <%= pluralize(@article.errors.count, "error") %>.
    </div> 
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <fieldset>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, size: 40 %>
    </p>
   
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, :class => "tinymce", cols: 50, rows: 15 %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  </fieldset>
<% end %>
<%= tinymce %>