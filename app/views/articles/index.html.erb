<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Listing articles<small><%= link_to ' New article', new_article_path %></small></h1>    
    </div>
  </div>

  <div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-6">
      <h2><%= article.title %></h2>
      <ul class="list-inline">
        <li><%= link_to 'Show', article_path(article) %></li>
        <li><%= link_to 'Edit', edit_article_path(article) %></li>
        <li><%= link_to 'Destroy', article_path(article),
                method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <%= article.text %> 
    </div> 
  <% end %>
  </div>
    <%= link_to 'Home', controller: 'welcome' %>
</div>
