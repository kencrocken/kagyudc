      </div><!-- /.row -->
    </section>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= yield %>
    </div>
  </div>
  
</div>

<div class="container">
  <%= debug(params) if Rails.env.development? %>
</div>

  <%= render 'layouts/footer' %>


</body>
</html>
