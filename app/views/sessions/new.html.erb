<% provide(:title, "Sign in") %>
<h2 class="text-center">Sign in</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, class: "control-label" %>
      <%= f.text_field :email, :placeholder => " Enter your email address", 
                                      class: "form-control" %>

      <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password, :placeholder => " Enter your Password", 
                                      class: "form-control" %>

      <%= f.submit "Sign in", :id => "signin", class: "btn btn-lg btn-info" %>

    <% end %>

      <p class="lead">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
