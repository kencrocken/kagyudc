<% provide(:title, 'Sign up') %>
<h2 class="text-center">Sign up</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

    <form class="form-horizontal" role="form">

        <div class="form-group">
          <%= f.label :name, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :name, :placeholder => " Enter your full name", 
                                      class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :email, :placeholder => " Enter your email address", 
                                      class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
           <%= f.password_field :password, :placeholder => " Enter your Password", 
                                      class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, :placeholder => " Confirm password", 
                                      class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-5">
            <%= f.submit "Create my account", class: "btn btn-lg btn-info" %>
          </div>
        </div> 

      <% end %>
    </form>
  </div>
</div>
